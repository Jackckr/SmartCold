<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.smartcold.manage.cold.dao.newdb.TaskMapper">
	
	<delete id="delTempTaskByID" parameterType="String">
		DELETE FROM `queue_task` where id in(#{id});
	</delete>
	
	<delete id="delAllTempTask">
     	DELETE FROM `queue_task` where `type` =-1 ;
	</delete>
	
	<update id="upTempState" parameterType="Integer">
		update `queue_task` set `state` =#{state} where id=#{id};
	</update>
	<update id="updateTaskStatus" parameterType="Integer" flushCache="true">
		update queue_task sk set  LastRunTim=DATE_FORMAT(now(), '%Y-%m-%d %H:%i:00') where id=#{id} and LastRunTim + interval intervalTime MINUTE &lt;= now() ;
	</update>
	
	<select id="getTaskByUid" resultType="map">
		SELECT t.`id` ,t.`state` ,t.`intervalTime` ,t.`className` ,t.`methodName` ,t.`exqip` ,date_format(t.`updateTime`, '%Y-%c-%d %h:%i:%s' ) as `updateTime`  FROM `queue_task` t where `intervalTime` =#{uid} and `type` =-1 ORDER BY `id` desc  LIMIT 10;
	</select>
	
	<insert id="addTempTask" parameterType="com.smartcold.manage.cold.entity.newdb.TaskEntity" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO `queue_task`(`type` ,`state` ,`intervalTime` ,`className` ,`methodName` ,`exqip`,`updateTime` )VALUE(#{type} ,#{state} ,#{intervalTime} ,#{className} ,#{methodName} ,#{exqip},now());
	</insert>
	
</mapper>