<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.smartcold.manage.cold.dao.newdb.DevStatusMapper">
    
    <select id="getApplByApID" parameterType="map" resultType="Integer">
      select frequency from `smartcold`.`frequencyset`  where  apid=#{apid} and type=1 ORDER BY `addtime`  desc LIMIT 1;
    </select>
    
    <select id="getDevPLbyApID" parameterType="map" resultType="map">
      select devid,frequency from `smartcold`.`frequencyset`  where  apid=#{apid} and type=2 ORDER BY `addtime`  desc;
    </select>

	<insert id="addAPStatusList" parameterType="StorageDataCollectionEntity">
		INSERT INTO `apstatus`
		(
		`apid`,
		`key`,
		`value`,
		`time`,
		`addtime`
		)
		VALUES
		<foreach collection="list" item="model" separator=","> 
        (           
            #{model.apid}, 
            #{model.key}, 
            #{model.value}, 
            #{model.time}, 
            now()     
        )
    </foreach>
	</insert>

	<insert id="addDevStatusList" parameterType="StorageDataCollectionEntity">
		INSERT INTO `devstatus`
		(
		`deviceid`,
		`apid`,
		`key`,
		`value`,
		`time`,
		`addtime`
		)
		VALUES
		<foreach collection="list" item="model" separator=","> 
        (           
            #{model.deviceid}, 
            #{model.apid}, 
            #{model.key}, 
            #{model.value}, 
            #{model.time}, 
            now()     
        )
    </foreach>
	</insert>

</mapper>