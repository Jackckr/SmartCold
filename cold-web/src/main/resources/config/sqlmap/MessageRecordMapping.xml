<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.smartcold.manage.cold.dao.olddb.MessageRecordMapping" >

   <select id="getUserAuth" parameterType="Integer" resultType="Integer">
    SELECT COUNT(`id`) from `messagerecord` where `uid`=#{userId} and `type`=1 and `stype` in(1,2) and `state`=1;
   </select>

    <insert id="insertMessageRecord">
        INSERT INTO `messagerecord`
        (`uid`,`rdcid`,`type`,`stype`,`title`,`message`,`addtime`)
        VALUES
        (#{uid},#{rdcId},#{type},#{sType},#{title},#{message},#{addTime})
    </insert>
    
    
</mapper>