<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.smartcold.manage.cold.dao.olddb.MessageRecordMapping" >

    <insert id="insertMessageRecord">
        INSERT INTO `messagerecord`
        (`uid`,`rdcid`,`type`,`stype`,`title`,`message`,`addtime`)
        VALUES
        (#{uid},#{rdcId},#{type},#{sType},#{title},#{message},#{addTime})
    </insert>
    <select id="getFiveNewMessage" resultType="java.util.HashMap">
        SELECT * FROM `messagerecord` WHERE `rdcid` IN
        (SELECT r.id FROM `rdc` AS r WHERE `userid`=#{userId})
        and `isread`=0
        order by `addtime` desc limit 0,5
    </select>
    <select id="getNoReadByUserId" resultType="java.lang.Integer">
        SELECT count(*) FROM `messagerecord` WHERE `rdcid` IN
        (SELECT r.id FROM `rdc` AS r WHERE `userid`=#{userId})
        and `isread`=0
    </select>
</mapper>