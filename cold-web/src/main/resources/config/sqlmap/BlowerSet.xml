<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.smartcold.manage.cold.dao.olddb.BlowerSetMapper">

    <select id="findByStorageId" parameterType="map" resultType="BlowerSetEntity">
		SELECT *
		FROM `BlowerSet` WHERE `coldStorageId` = #{coldStorageId}
	</select>
    <select id="findByFilter" parameterType="map" resultType="BlowerSetEntity">
		SELECT id,`name`,`fanPower` ,`frostPower`  FROM `blowerset` where 1=1
		<if test="fanPower!=null"> and `fanPower`>#{fanPower} </if>
		<if test="frostPower!=null"> and `frostPower`>#{frostPower} </if>
		<if test="rdcId!=null"> and  `coldStorageId` IN (select id from `coldstorageset` cs where cs.`RDCID` =#{rdcId}) </if>
	</select>

</mapper>