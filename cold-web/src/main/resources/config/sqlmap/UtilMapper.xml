<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.smartcold.manage.cold.dao.olddb.UtilMapper">
    
    <select id="findObjByID" parameterType="map" resultType="com.smartcold.manage.cold.entity.comm.ItemValue">
      SELECT `id` ,`name`  from `${table}` where `id`=#{id};
    </select>
    <select id="findObjByRdcId" parameterType="map" resultType="com.smartcold.manage.cold.entity.comm.ItemValue">
      SELECT `id` ,`name`  from `${table}` where `rdcid`=#{rdcid};
    </select>
     <select id="findSObjByRdcId" parameterType="map" resultType="com.smartcold.manage.cold.entity.comm.ItemValue">
        select `id` ,`name` from `${stable}` where `${colum}` in (select id from `${ptable}` where rdcid=#{rdcid});
    </select>

    
  

</mapper>