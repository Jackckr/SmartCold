<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.smartcold.manage.cold.dao.olddb.EvaporativeWaterSetMapping">

    <select id="findById" parameterType="map" resultType="EvaporativeWaterSetEntity">
		SELECT *
		FROM `evaporativewaterset` WHERE `id` = #{id}
	</select>


	<select id="findByGroupid" parameterType="map" resultType="EvaporativeWaterSetEntity">
	    SELECT ew.* FROM `evaporativewaterset` ew 
		LEFT JOIN `evaporativeset` ev ON ew.`evaporativeid` = ev.id 
		LEFT JOIN `compressorgroupset` cg ON ev.id = cg.`evaporativeId`
		WHERE cg.id = #{groupid}
	</select>

</mapper>