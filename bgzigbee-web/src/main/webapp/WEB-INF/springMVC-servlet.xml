<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc" xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="
           http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-4.1.xsd
           http://www.springframework.org/schema/aop
           http://www.springframework.org/schema/aop/spring-aop-4.1.xsd
           http://www.springframework.org/schema/mvc
           http://www.springframework.org/schema/mvc/spring-mvc-4.1.xsd">

	<!-- 设置使用注解的类所在的jar包 -->
	<context:component-scan base-package="com.smartcold.bgzigbee.manage.controller"></context:component-scan>
	<!-- enable autowire --> 
	<context:annotation-config />
	<!-- 默认的注解映射的支持 -->  
	<mvc:annotation-driven />
	<mvc:interceptors>
		<mvc:interceptor>
			<mvc:mapping path="/rdc/*"/>
			<mvc:mapping path="/comment/*"/>
			<bean class="com.smartcold.bgzigbee.manage.interceptor.RdcLogInterceptor"/>
		</mvc:interceptor>
		<mvc:interceptor>
			<mvc:mapping path="/user/*"/>
			<bean class="com.smartcold.bgzigbee.manage.interceptor.userLogInterceptor"/>
		</mvc:interceptor>
		<mvc:interceptor>
			<mvc:mapping path="/storage/*"/>
			<bean class="com.smartcold.bgzigbee.manage.interceptor.storageConfigLogInterceptor"/>
		</mvc:interceptor>
<!-- 		<mvc:interceptor> -->
<!-- 			<mvc:mapping path="/**"/> -->
<!-- 			<bean class="com.smartcold.bgzigbee.manage.interceptor.LoginInterceptor"/> -->
<!-- 		</mvc:interceptor> -->
	</mvc:interceptors>
	
	
	
</beans>