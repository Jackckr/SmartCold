<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.smartcold.bgzigbee.manage.dao.UserMapper">

    <insert id="insertUser" parameterType="com.smartcold.bgzigbee.manage.entity.UserEntity">
        INSERT INTO `user`(
		`username`,
		`password`,
		`telephone`,
		`email`,
		`type`,
		`audit`,
		`addTime`
		)
		VALUE 
		(
		#{username},
		#{password},
		#{telephone},
		#{email},
		#{type},
		#{audit},
		now()
		)
    </insert>

    <select id="findUser" parameterType="map" resultType="com.smartcold.bgzigbee.manage.entity.UserEntity">
		SELECT ID,`type` ,`username` ,`telephone` ,`email` ,`addTime` ,`audit`  FROM `user` WHERE `username` = #{username} AND `password` = #{password}
	</select>
	
	 <select id="findAllUser" parameterType="int" resultType="com.smartcold.bgzigbee.manage.entity.UserEntity">
         SELECT ID,`username` ,`type`,`telephone` ,`email` ,`addTime` ,`audit`  FROM `user`
		 <where> 
			<if test="audit != null">
			    audit=#{audit}
			</if>
			<if test="type != null">
			    type=#{type}
			</if>
		    <if test="keyword != null">
		        AND username like "%"#{keyword}"%"  or `telephone`  like "%"#{keyword}"%" 
		    </if>
		 </where>
         order by `addTime` desc
    </select>
	 <select id="findUserByFilter" parameterType="map" resultType="com.smartcold.bgzigbee.manage.entity.UserEntity">
         SELECT ID,`username` ,`type`,`telephone` ,`email` ,`addTime` ,`audit`  FROM `user` where 1=1  
			<if test="audit != null">
			  and  `audit`=#{audit} 
			</if>
			<if test="type != null">
			  and  `type`=#{type} 
			</if>
		    <if test="coleam!=null and coleam !='' and colval!=''">
		      and  `${coleam}` like "%"#{colval}"%"   
		    </if>
         order by `id` desc
    </select>
	
	<select id="findUserByName" parameterType="map" resultType="com.smartcold.bgzigbee.manage.entity.UserEntity">
		SELECT ID,`username`,`type`,`telephone` ,`email` ,`addTime` ,`audit` 
		FROM `user` WHERE `username` = #{username}
	</select>

    <select id="findUserById" parameterType="map" resultType="com.smartcold.bgzigbee.manage.entity.UserEntity">
		SELECT ID,`type`,`username` ,`telephone` ,`email` ,`addTime` ,`audit` 
		FROM `user` WHERE `id` = #{id}
	</select>
    <select id="deleteUser" parameterType="map">
	    DELETE FROM user WHERE `id` = #{id}
	</select>
	
	<update id="changeAudit">
		update user set audit=#{audit}
		where id=#{userID}
	</update>
	
	<update id="changeUserType" parameterType="map">
	  update user set type=#{type} where id in(${ids});
	</update>
   <update id="updateUser" parameterType="UserEntity" >
        update user
        <set>
	         <if test="role       !=null">role       =#{role      },</if>
	         <if test="sex        !=null">sex        =#{sex       },</if>
	         <if test="addressid  !=null">addressid  =#{addressid },</if>
	         <if test="hometownid !=null">hometownid =#{hometownid},</if>
	         <if test="username   !=null and username !=''">username   =#{username  },</if>
	         <if test="password   !=null and password !=''">password   =#{password  },</if>
	         <if test="telephone  !=null and telephone!=''">telephone  =#{telephone },</if>
	         <if test="realname   !=null and realname !=''"> realname  =#{realname  },</if>
	         <if test="nickname   !=null and nickname !=''"> nickname  =#{nickname  },</if> 
	         <if test="email      !=null and email    !=''">   email   =#{email     },</if>
	         <if test="avatar     !=null and avatar   !=''">   avatar  =#{avatar    },</if>
	         <if test="addTime    !=null and addTime  !=''">addTime    =#{addTime   },</if>
	         <if test="updateTime !=null and updateTime!=''">updateTime=#{updateTime}</if>
        </set>
        where id = ${id}
    </update>
	
</mapper>