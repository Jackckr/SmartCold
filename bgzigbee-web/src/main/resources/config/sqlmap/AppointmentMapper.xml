<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.smartcold.bgzigbee.manage.dao.AppointmentMapper">

  <update id="updatByIds" parameterType="map">
    update `appointment` set `status`=#{status} ,`comit`= #{commit} where id in (${ids});
  </update>
  
  <delete id="delByIds" parameterType="map">
    DELETE from `appointment` where id in (${ids});
  </delete>
  
  <select id="getList" parameterType="map" resultType="Map">
    SELECT * from `appointment`
    <if test="status!=null">  where `status` =#{status}  </if>
    ORDER BY `addtime` desc
  </select>


    

	
</mapper>