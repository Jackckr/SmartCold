<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.smartcold.bgzigbee.manage.dao.SetTableMapper">
    <insert id="insert">
        INSERT into ${table} set name=#{name},rdcid=#{rdcid}
         <if test="mapping !=null and mapping!=''">,mapping=#{mapping}</if>
         <if test="power !=null and power!=''">,power=#{power}</if>;
    </insert>

    <update id="updateMapping">
        UPDATE ${table} SET mapping=#{mapping}
        WHERE id=#{id}
    </update>
    <delete id="deleteById">
        DELETE FROM ${table} WHERE id=#{id}
    </delete>
    <select id="findFiledsAndComment" resultType="com.smartcold.bgzigbee.manage.dto.ColumnDescDTO">
        SHOW FULL COLUMNS FROM ${table}
    </select>
    <select id="findByRdcId" resultType="java.util.Map">
        SELECT * FROM ${table}
        WHERE rdcid=#{rdcid}
    </select>


</mapper>