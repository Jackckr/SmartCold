<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.smartcold.bgzigbee.manage.sc360.dao.DeviceObjectMappingMapper">

     <select id="findAllDevice" resultType="com.smartcold.bgzigbee.manage.sc360.entity.DeviceObjectMappingEntity">
        SELECT * FROM `deviceObjectMapping`
         <where> 
            <if test="audit != null">
			    status=#{audit}
			</if>
		    <if test="keyword != null">
		      AND deviceid like "%"#{keyword}"%"
		    </if>
		 </where>
         order by `addTime` desc
    </select>

	<update id="upDeviceObjectStatus"  parameterType="com.smartcold.bgzigbee.manage.sc360.entity.DeviceObjectMappingEntity" >
	    update deviceobjectmapping set `status`=#{status} where id=#{id};
	</update>
	  
    <delete id="delById">
        DELETE FROM `deviceObjectMapping` WHERE `id`=#{id}
    </delete>
    
</mapper>